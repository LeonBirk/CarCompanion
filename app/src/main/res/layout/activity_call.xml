<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="com.example.leon.carcompanion.CallActivity"
android:weightSum="1"
android:padding="0dp">


    <RelativeLayout
        android:id="@+id/background_layoutCall"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.12"
        android:background="@drawable/background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/notepad_iconCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/anrufe_icon" />

        <ImageButton
            android:id="@+id/btnCallSpeak"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/roundedbutton"
            android:cropToPadding="false"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:shadowColor="@color/button_shadow"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="0.1"
            android:src="@drawable/ico_mic"
            android:text="@string/add_note"
            android:textColor="@color/white"
            android:textSize="12pt" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSpeak"
        android:layout_marginTop="20dp"
        android:text="Telefonnummer oder Empfänger" />
<EditText
    android:id="@+id/editTextCall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:text="Befehle: EMPFÄNGER, ANRUFEN, RUFE ... AN" />

</LinearLayout>
