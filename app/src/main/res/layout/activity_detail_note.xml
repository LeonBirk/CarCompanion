<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.leon.carcompanion.DetailNoteActivity">

    <TextView
        android:id="@+id/noteDetailTextView_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/noteDetailTextView_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="182dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        tools:context="com.example.leon.carcompanion.DetailNoteActivity">

        <ImageButton
            android:id="@+id/changeNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            android:src="@drawable/change_icon"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/deleteNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:src="@drawable/delete_icon"
            android:background="@null"/>

    </LinearLayout>
</LinearLayout>
